@{
    ViewData["Title"] = "Update Department";
}
@model DepartmentUpdateVM
<div class="container mt-4">
    <div class="row">
        <div class="col">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Update Department</h6>
                    <a asp-action="Index" asp-controller="Department" class="btn btn-outline-primary">Return List</a>
                </div>
                <div>
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="@Model.Name"></label>
                            <input asp-for="@Model.Name" class="form-control" placeholder="Name">
                            <span asp-validation-for="@Model.Name" class="form-text text-muted"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>