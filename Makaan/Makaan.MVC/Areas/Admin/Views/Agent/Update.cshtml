@model AgentUpdateVM
@{
    ViewData["Title"] = "Update Agent";
}
<div class="container mt-4">
    <div class="row">
        <div class="col">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Create Agent</h6>
                    <a asp-action="Index" asp-controller="Agent" class="btn btn-outline-primary">Return List</a>
                </div>
                <div>
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="@Model.Fullname"></label>
                            <input asp-for="@Model.Fullname" class="form-control" placeholder="Name">
                            <span asp-validation-for="@Model.Fullname" class="form-text text-muted"></span>
                        </div>
                        <div class="form-group">
                            <img src="~/imgs/agents/@Model.ExistingImageUrl" width="100" />
                            <label asp-for="@Model.Image"></label>
                            <input asp-for="@Model.Image" class="form-control" placeholder="Name">
                            <span asp-validation-for="@Model.Image" class="form-text text-muted"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="@Model.DepartmentId"></label>
                            <select class="form-select" asp-for="DepartmentId">
                                <option selected disabled>Select Department</option>
                                @foreach (var item in ViewBag.Departments)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                            <span asp-validation-for="DepartmentId" class="text-small text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>